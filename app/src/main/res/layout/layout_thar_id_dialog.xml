<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:padding="10dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please enter your THAR-ID"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/montserrat_bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="THAR ID is the unique id provided to you at the time of event registration"
        android:fontFamily="@font/montserrat"/>

    <EditText
        android:id="@+id/dialogTharIdEt"
        android:hint="THAR ID"
        android:inputType="text"
        android:textColor="@android:color/black"
        android:fontFamily="@font/montserrat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginTop="10dp"
        android:layout_gravity="end"
        android:id="@+id/dialogSubmitBtn"
        android:text="Submit"
        android:backgroundTint="@android:color/black"
        android:textColor="@android:color/white"
        android:fontFamily="@font/montserrat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</LinearLayout>